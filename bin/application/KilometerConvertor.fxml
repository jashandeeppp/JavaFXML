<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.KilometerConverterController">
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="329.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="promptLabel" layoutX="22.0" layoutY="42.0" text="Enter a distance in kilometers: " />
            <TextField fx:id="kilometerTextField" layoutX="204.0" layoutY="38.0" prefHeight="26.0" prefWidth="88.0" />
            <Label fx:id="outputLabel" layoutX="20.0" layoutY="82.0" prefHeight="18.0" prefWidth="218.0" />
            <Button fx:id="convertButton" layoutX="182.0" layoutY="140.0" mnemonicParsing="false" onAction="#convertButtonListener" text="Convert to Miles" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
